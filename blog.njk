---
title: Welcome to the Blog
layout: blogMainLayout.liquid
pagination:
  data: collections.blog
  size: 2
  alias: blogs
---

<section class="blog-greeting">
    <h1>{{title}}</h1>
    <section class="blog-articles">

{% for blog in blogs %}
<a href="{{blog.url}}" class ="blog-link-hover">
  <section  class="blog-hero blog-item">
    <div class="blog-content">
      <h2>{{blog.data.title}}</h2>
      <span>{{blog.data.blogDate}}</span>
      <p>Fool me once, shame on me, fool me twice, I start my own business</p>
      <!-- - [{{blog.data.title}}]({{blog.url}}) -->
        <h3 class = "read-more">Read more</h3>
    </div>
  </section>
</a>
{% endfor %}

{% if pagination.href.previous %}<a href="{{pagination.href.previous}}">Previous Page</a>{% endif %}
{% if pagination.href.next %}<a href="{{pagination.href.next}}">Next Page</a>{% endif %}

</section>
</section>
